# Flask Backend Configuration - Security Hardened
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=False

# Security Keys - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-very-secure-random-key-change-this
SESSION_COOKIE_KEY=your-secure-session-key

# Database Configuration
DATABASE_URI=sqlite:///tasks.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Server Configuration
HOST=127.0.0.1
PORT=5000

# CORS Configuration - Restrict to specific origins
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_SUPPORTS_CREDENTIALS=True

# Security Headers
FORCE_HTTPS=True
ENABLE_TALISMAN=True
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PREFERRED_URL_SCHEME=https

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/taskmanager.log
LOG_MAX_BYTES=10240
LOG_BACKUP_COUNT=10

# API Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=memory://

# Content Security
MAX_CONTENT_LENGTH=16777216
