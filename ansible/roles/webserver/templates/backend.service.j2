[Unit]
Description=Task Manager Backend API
After=network.target

[Service]
Type=simple
User=ec2-user
Group=ec2-user
WorkingDirectory=/opt/taskmanager/backend
Environment="PATH=/opt/taskmanager/backend/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="FLASK_APP=app.py"
Environment="FLASK_ENV=production"
Environment="PYTHONUNBUFFERED=1"
Environment="SECRET_KEY={{ lookup('password', '/dev/null length=64 chars=ascii_letters,digits') }}"
Environment="FORCE_HTTPS=False"
ExecStart=/opt/taskmanager/backend/venv/bin/python /opt/taskmanager/backend/app.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=taskmanager-backend

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/taskmanager

[Install]
WantedBy=multi-user.target
