[Unit]
Description=Task Manager Backend API
After=network.target

[Service]
Type=simple
User=ec2-user
Group=ec2-user
WorkingDirectory=/opt/taskmanager/backend
Environment="PATH=/opt/taskmanager/backend/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="FLASK_APP=app.py"
Environment="FLASK_ENV=production"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/opt/taskmanager/backend/venv/bin/python /opt/taskmanager/backend/app.py
Restart=always
RestartSec=10
StandardOutput=append:/opt/taskmanager/logs/backend.log
StandardError=append:/opt/taskmanager/logs/backend-error.log

[Install]
WantedBy=multi-user.target